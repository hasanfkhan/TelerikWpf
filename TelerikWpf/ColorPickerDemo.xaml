<Window x:Class="TelerikWpf.ColorPickerDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="ColorPickerDemo" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Name="TxtBlock" FontSize="20" FontWeight="ExtraBold" Text="Hello Color Picker" Background="LightGray" />
            <telerik:RadColorPicker Name="Cpicker" SelectedColorChanged="Cpicker_SelectedColorChanged"></telerik:RadColorPicker>
        </StackPanel>
    </Grid>
</Window>
